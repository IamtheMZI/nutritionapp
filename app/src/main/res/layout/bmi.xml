<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#FFFFFF"
	android:padding="11dp">

	<TextView
		android:layout_height="wrap_content"
		android:text="বি এম আই"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:alpha="1"
		android:background="@color/cyan"
		android:padding="11dp"
		android:layout_gravity="center"
		android:textColor="#FFFFFF"
		android:textSize="28sp"
		android:paddingLeft="20dp"
		android:layout_marginBottom="10dp"/>

	<TextView
		android:layout_height="wrap_content"
		android:text="আপনার বি এম আই"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:alpha="1"
		android:background="#FFFFFF"
		android:padding="11dp"
		android:layout_gravity="center"
		android:textColor="@color/cyan"
		android:textSize="28sp"
		android:paddingLeft="15dp"
		android:layout_marginBottom="10dp"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_gravity="center"
		android:layout_weight="0">

		<TextView
			android:layout_height="wrap_content"
			android:text="0"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:alpha="1"
			android:background="#FFFFFF"
			android:padding="8dp"
			android:layout_gravity="left"
			android:textColor="@color/cyan"
			android:textSize="50sp"
			android:paddingLeft="0dp"
			android:layout_weight="1"
			android:paddingRight="0dp"
			android:gravity="center"
			android:layout_margin="7dp"
			android:id="@+id/bmiOutput1"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="0.25"
			android:background="#E82114"/>

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight=".25"
			android:background="#4ACF1B"/>

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="0.25"
			android:background="#EDE809"/>

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight=".25"
			android:background="#F01608"/>

	</LinearLayout>

	<EditText
		android:layout_height="wrap_content"
		android:inputType="numberDecimal"
		android:ems="10"
		android:layout_width="wrap_content"
		android:hint="আপনার উচ্চতা (মিটার)"
		android:id="@+id/bmiHeightText1"
		android:gravity="center"
		android:layout_gravity="center"/>

	<EditText
		android:layout_height="wrap_content"
		android:inputType="numberDecimal"
		android:ems="10"
		android:layout_width="wrap_content"
		android:hint="আপনার ওজন (কেজি)"
		android:id="@+id/bmiWeightText1"
		android:layout_gravity="center"
		android:gravity="center"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="center"
		android:layout_margin="10dp"
		android:id="@+id/bmiCalculate1"
		android:onClick="onClick">

		<TextView
			android:layout_height="wrap_content"
			android:text="মাপুন"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:alpha="1"
			android:background="@color/cyan"
			android:padding="8dp"
			android:layout_gravity="center"
			android:textColor="#FFFFFF"
			android:textSize="15sp"
			android:paddingLeft="0dp"
			android:paddingRight="0dp"
			android:gravity="center"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="center"
		android:layout_margin="10dp"
		android:id="@+id/back"
		android:onClick="onClick">

		<TextView
			android:layout_height="wrap_content"
			android:text="মূলপাতা"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:alpha="1"
			android:background="@color/cyan"
			android:padding="8dp"
			android:layout_gravity="center"
			android:textColor="#FFFFFF"
			android:textSize="28sp"
			android:paddingLeft="0dp"
			android:layout_weight="0.4"
			android:paddingRight="0dp"
			android:gravity="center"/>

	</LinearLayout>

</LinearLayout>

