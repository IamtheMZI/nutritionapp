<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#ffffff"
	android:padding="11dp">

	<TextView
		android:layout_height="wrap_content"
		android:text="মূলপাতা"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:alpha="1"
		android:background="#FFBD00"
		android:padding="11dp"
		android:layout_gravity="center"
		android:textColor="#FFFFFF"
		android:textSize="28sp"
		android:paddingLeft="20dp"/>

	<TextView
		android:layout_height="wrap_content"
		android:text="স্বাগতম, ব্যবহারকারী। আজ আপনার সুস্বাস্থ্যের ১ম দিন"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:gravity="center"
		android:layout_gravity="center"
		android:padding="19dp"
		android:textColor="#FFBD00"
		android:textStyle="bold"
		android:textSize="18sp"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_gravity="center"
		android:layout_weight="0"
		android:onClick="onClick"
		android:id="@+id/menuAccountButton">

		<TextView
			android:layout_height="wrap_content"
			android:text="একাউন্ট"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:alpha="1"
			android:background="#FFBD00"
			android:padding="8dp"
			android:layout_gravity="left"
			android:textColor="#FFFFFF"
			android:textSize="20sp"
			android:paddingLeft="0dp"
			android:layout_weight="1"
			android:paddingRight="0dp"
			android:gravity="center"
			android:layout_margin="10dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_gravity="center"
		android:layout_weight="0"
		android:onClick="onClick"
		android:id="@+id/menuCalorieButton">

		<TextView
			android:layout_height="wrap_content"
			android:text="ক্যালরিমিতি"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:alpha="1"
			android:background="#FFBD00"
			android:padding="8dp"
			android:layout_gravity="right"
			android:textColor="#FFFFFF"
			android:textSize="20sp"
			android:paddingLeft="0dp"
			android:layout_weight=".5"
			android:gravity="center"
			android:layout_margin="10dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_gravity="center"
		android:layout_weight="0">

		<TextView
			android:layout_height="match_parent"
			android:text="খাদ্যতালিকা"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:alpha="1"
			android:background="#FFBD00"
			android:padding="8dp"
			android:layout_gravity="left"
			android:textColor="#FFFFFF"
			android:textSize="20sp"
			android:paddingLeft="0dp"
			android:layout_weight="1"
			android:paddingRight="0dp"
			android:gravity="center"
			android:layout_margin="10dp"
			android:onClick="onClick"
			android:id="@+id/menuFoodlistButton"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_gravity="center"
		android:layout_weight="0"
		android:onClick="onClick"
		android:id="@+id/menuDailymeasureButton">

		<TextView
			android:layout_height="wrap_content"
			android:text="দৈনিক পরিমাপক"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:alpha="1"
			android:background="#FFBD00"
			android:padding="8dp"
			android:layout_gravity="right"
			android:textColor="#FFFFFF"
			android:textSize="20sp"
			android:paddingLeft="0dp"
			android:layout_weight="1"
			android:gravity="center"
			android:layout_margin="10dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="center"
		android:layout_margin="10dp"
		android:id="@+id/menuMoreinfoButton"
		android:onClick="onClick">

		<TextView
			android:layout_height="wrap_content"
			android:text="আরও"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:alpha="1"
			android:background="#FFBD00"
			android:padding="8dp"
			android:layout_gravity="center"
			android:textColor="#FFFFFF"
			android:textSize="28sp"
			android:paddingLeft="0dp"
			android:layout_weight="0.4"
			android:paddingRight="0dp"
			android:gravity="center"/>

	</LinearLayout>

</LinearLayout>

